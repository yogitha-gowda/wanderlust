<% layout("/layouts/boilerplates") %>
<link rel="stylesheet" href="/css/btnStyle.css">

<div class="row mt-3">
    <h1 class="col-6 offset-3">Login to Wanderlust</h1>
    <br><br><br>
    <h6 class="col-6 offset-3">Don't have an account? <a href="/signup">Sign Up</a></h6>
    <br><br>
    <div class="col-6 offset-3">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label"><b>Username</b></label>

            <div class="input-group">
                <div class="input-group-prepend">
                    <span class="input-group-text" id="basic-addon1">@</span>
                  </div>

                <input
                  name="username"
                  id="username"
                  type="text"
                  class="form-control border border-black border-opacity-50"
                  required
                  />
                </div>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label"><b>Password</b></label>
                <input
                  name="password"
                  id="password"
                  type="password"
                  class="form-control border border-black border-opacity-50"
                  required
                  />
            </div>
            <button class="btn btn-primary myStyle">Login</button>
        </form>
    </div>
</div>